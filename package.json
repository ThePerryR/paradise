{
  "name": "TeachOK",
  "version": "0.0.10",
  "repository": "https://github.com/ThePerryR/alge.git",
  "author": "perry@teachok.com",
  "private": true,
  "main": "src",
  "license": "MIT",
  "scripts": {
    "start": "node .",
    "lint": "eslint src",
    "coverage": "npm run test --coverage",
    "test": "cross-env NODE_ENV=test jest",
    "dev": "concurrently --kill-others \"nodemon src --watch\" \"node webpack/webpack-dev-server\"",
    "storybook": "start-storybook -p 6006 -s src/public -c src/stories",
    "build:clean": "rimraf \"dist/!(.git*|Procfile)**\"",
    "build:copy": "copyfiles -u 1 src/public/* src/public/**/* src/public/**/**/* dist",
    "prebuild": "npm run build:clean && npm run build:copy",
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.config",
    "heroku-postbuild": "npm run build"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/src/components"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.17.2",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-rate-limit": "^2.8.0",
    "express-session": "^1.15.4",
    "helmet": "^3.8.0",
    "mongoose": "^4.11.4",
    "morgan": "^1.8.2",
    "passport": "^0.3.2",
    "path": "^0.12.7",
    "react": "^15.6.1",
    "serve-favicon": "^2.4.3",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.6.1",
    "webpack-isomorphic-tools": "^3.0.3",
    "webpack-md5-hash": "^0.0.5"
  },
  "devDependencies": {}
}
